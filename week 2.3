import java.util.Scanner;
public class Sequence{
    public static void main(String args[]){
        Scanner input=new Scanner(System.in);
        int n=input.nextInt();
        f1 f=new f1();
        int c=f.s(n);
        System.out.println(c);
    }
}
class f1{
        int s(int n){
        if(n==1)
            return 0;
        else if(n==2)
            return 1;
        else if(n==3)
            return 1;
        else
            return s(n-1)+s(n-2)+s(n-3);
        }
}
